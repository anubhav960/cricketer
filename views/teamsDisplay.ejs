<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tournament List</title>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
</head>

<body>
    <nav class="navbar navbar-dark bg-dark justify-content-between">
        <a class="navbar-brand mx-5" href="/tournamentDisplay"> Cricketer </a>
        <div class="d-flex justify-content-end">
            <form class="form-inline">
                <button class="btn btn-light rounded-0 my-5 mx-5 my-sm-0" type="submit"> <a
                        href="/dashboard/<%=tournamentName%>" class="text-decoration-none text-dark"> Dashboard </a>
                </button>
            </form>
            <form class="form-inline" action="/logout" method="post">
                <button class="btn btn-light rounded-0 my-5 mx-5 my-sm-0" type="submit"> Logout </button>
            </form>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="display-4 text-center mb-3">Teams List</div>
                <div class="h3 text-center"><%= tournamentName %></div>
                <table class="table table-striped">
                    <thead class="bg-dark text-light">
                        <tr>
                            <td> # </td>
                            <td class="w-75">Team Name</td>
                            <td></td>
                        </tr>
                    </thead>
                    <% let index=1 %>
                        <% listItems.teams.forEach(function(item) { %>
                            <tr>
                                <td>
                                    <%= index %>
                                </td>
                                <td>
                                    <%= item.teamName %>
                                </td>
                                <td>
                                    <form action="/deleteTeam/<%=tournamentName %>" method="post">
                                        <input type="hidden" name="teamName" value="<%=item.teamName%>">
                                        <button type="submit" href="#">Remove</a> </form>
                                </td>
                            </tr>
                            <% index++ %>
                        <% }) %>
                        <tr>
                            <td></td>
                            <td> <a href="/addTeam/<%=tournamentName%>" class="text-decoration-none text-dark"> + ADD NEW TEAM </a></td>
                            <td></td>
                        </tr>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

    
