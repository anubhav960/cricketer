<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Match</title>
    <link rel="stylesheet" href="css/style.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-dark bg-dark justify-content-between">
        <a class="navbar-brand mx-5" href="/tournamentDisplay">Cricketer</a>
        <div class="d-flex justify-content-end">
            <form class="form-inline">
                <button class="btn btn-light rounded-0 my-5 mx-5 my-sm-0" type="submit"> <a
                        href="/dashboard/<%=tournamentName%>" class="text-decoration-none text-dark"> Dashboard </a>
                </button>
            </form>
            <form class="form-inline" action="/logout" method="post">
                <button class="btn btn-light rounded-0 my-5 mx-5 my-sm-0" type="submit"> Logout </button>
            </form>
        </div>
    </nav>
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-12 col-sm-8 col-md-6 m-auto">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="card-title display-1"> Add Match </div>
                        <div class="display-4 mb-4"><%= tournamentName %></div>
                        <form action="/addMatch/<%=tournamentName%>" method="post" id="addMatchForm" name="matchForm">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text px-5" for="inputGroupSelect01">Team 1</label>
                                </div>
                                <select class="custom-select w-75" id="inputGroupSelect01" name="team1">
                                    <% listItems.teams.forEach(function(item) { %>
                                        <option value="<%= item.teamName %>">
                                            <%= item.teamName %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text px-5" for="inputGroupSelect02">Team 2</label>
                                </div>
                                <select class="custom-select w-75" id="inputGroupSelect01" name="team2">
                                    <% listItems.teams.forEach(function(item) { %>
                                        <option value="<%= item.teamName %>">
                                            <%= item.teamName %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text px-4" for="inputGroupSelect02"> &nbsp; Date & Time</label>
                                </div>
                                <input type="datetime-local" class="w-75 border-light" name="date" required>
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text px-5" for="inputGroupSelect02">Format</label>
                                </div>
                                <select class="custom-select w-75" name="format" id="">
                                    <option value="T20">T20</option>
                                    <option value="ODI">ODI</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-dark w-100 rounded-0 p-2 my-3">Create Match</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>

document.getElementById("addMatchForm").onsubmit = function(event) {
    let t1 = document.forms['matchForm']['team1'].value
    let t2 = document.forms['matchForm']['team2'].value
    if(t1===t2) {
        event.preventDefault();
        alert('A team cannot play a match with itself.');
        return false
    }
}


</script>
</html>